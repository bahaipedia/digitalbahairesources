<section id="monthly-history">
    <h2>Monthly History, <span id="monthly-history-year"></span></h2>
    <table class="monthly-history-table">
        <thead>
            <tr>
                <th>Month</th>
                <th class="header-unique-visitors">Unique Visitors</th>
                <th class="header-number-visits">Number of Visits</th>
                <th class="header-pages">Pages</th>
                <th class="header-hits">Hits</th>
                <th class="header-bandwidth">Bandwidth</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="6">Loading...</td>
            </tr>
        </tbody>
    </table>

    <div class="chart-header">
        <h1>
            Breakdown of 
            <select id="metric-select" name="metric">
                <option value="unique_visitors">Unique Visitors</option>
                <option value="number_of_visits">Number of Visits</option>
                <option value="pages">Pages</option>
                <option value="hits">Hits</option>
                <option value="bandwidth">Bandwidth</option>
            </select>
            per website and per server (all time)
        </h1>
    </div>

    <div class="charts-container">
        <canvas id="website-chart" width="400" height="400"></canvas>
        <canvas id="server-chart" width="400" height="400"></canvas>
    </div>
</section>
