<section id="traffic-summary">
    <h2>Summary for <span id="summary-month"></span>, <span id="summary-year"></span></h2>
    <table class="traffic-summary-table">
        <thead>
            <tr class="traffic-summary-header">
                <th class="header-unique-visitors">Unique Visitors</th>
                <th class="header-number-visits">Number of Visits</th>
                <th class="header-pages">Pages</th>
                <th class="header-hits">Hits</th>
                <th class="header-bandwidth">Bandwidth</th>
            </tr>
        </thead>
        <tbody>
            <tr class="traffic-summary-loading">
                <td colspan="5">Loading...</td>
            </tr>
        </tbody>
    </table>

    <div class="chart-header">
        <h1>
            Breakdown of 
            <select id="metric-select" name="metric">
                <option value="unique_visitors">Unique Visitors</option>
                <option value="total_visits">Number of Visits</option>
                <option value="total_pages">Pages</option>
                <option value="total_hits">Hits</option>
                <option value="total_bandwidth">Bandwidth</option>
            </select>
            per website and per server
        </h1>
    </div>

    <div class="charts-container">
        <canvas id="website-chart"></canvas>
        <canvas id="server-chart"></canvas>
    </div>
</section>

<!-- Chart.js Script -->
<script src="/js/chart.min.js"></script>
