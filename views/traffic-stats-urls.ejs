<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URLs Stats</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/traffic-stats-urls.css">
    <link rel="icon" href="../images/dbs-favicon.png" type="image/png">
</head>
<body>
    <%- include('partials/header', { mini: true }) %>
    <div class="container">
        <%- include('partials/traffic-sidebar') %>

        <div class="main-content">
            <nav class="traffic-nav">
                <label for="website-select">Website:</label>
                <select id="website-select" name="website">
                    <option value="all">All</option>
                    <% websites.forEach(function(website) { %>
                        <option value="<%= website.id %>"><%= website.name %></option>
                    <% }) %>
                </select>

                <label for="server-select">Server:</label>
                <select id="server-select" name="server">
                    <option value="all">All</option>
                    <% servers.forEach(function(server) { %>
                        <option value="<%= server.id %>"><%= server.location %></option>
                    <% }) %>
                </select>

                <label for="year-select">Year:</label>
                <select id="year-select" name="year">
                    <% years.forEach(function(y) { %>
                        <option value="<%= y %>" <%= y === selectedYear ? 'selected' : '' %>><%= y %></option>
                    <% }) %>
                </select>

                <label for="month-select">Month:</label>
                <select id="month-select" name="month">
                    <% months.forEach(function(m) { %>
                        <option value="<%= m %>" <%= m === selectedMonth ? 'selected' : '' %>><%= m %></option>
                    <% }) %>
                </select>
            </nav>

            <!-- Content sections -->
            <%- include('partials/urls-highlight') %>
        </div>
    </div>
    <script src="/traffic-stats-urls.js"></script>
    <script src="/js/chart.umd.js"></script>
    <%- include('partials/footer') %>
</body>
</html>
