    <script>
        // --- Copy Button Logic ---
        document.getElementById('copyBtn').addEventListener('click', () => {
            const code = document.getElementById('pythonCode').innerText;
            const btn = document.getElementById('copyBtn');
            const svg = btn.querySelector('svg');
            navigator.clipboard.writeText(code).then(() => {
                const originalPath = svg.innerHTML;
                svg.innerHTML = '<path d="M13.78 4.22a.75.75 0 0 1 0 1.06l-7.25 7.25a.75.75 0 0 1-1.06 0L2.22 9.28a.75.75 0 0 1 1.06-1.06L6 10.94l6.72-6.72a.75.75 0 0 1 1.06 0Z"></path>';
                btn.style.borderColor = '#2da44e';
                btn.style.color = '#2da44e';
                setTimeout(() => {
                    svg.innerHTML = originalPath;
                    btn.style.borderColor = '';
                    btn.style.color = '';
                }, 2000);
            });
        });

        // --- EXPLORER WIDGET LOGIC ---
        
        const treeRoot = document.getElementById('treeRoot');
        const searchInput = document.getElementById('catSearch');
        const generateBtn = document.getElementById('generateBtn');
        const summarySpan = document.getElementById('selection-summary');
        const selectedArea = document.getElementById('selectedArea');
        
        // GLOBAL STATE: Keeps track of explicitly selected categories
        const selectedCategories = new Set();

        // 1. Search Debounce
        let debounceTimer;
        searchInput.addEventListener('input', (e) => {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => performSearch(e.target.value), 300);
        });

        async function performSearch(query) {
            if (query.length < 2) return;
            treeRoot.innerHTML = '<li style="padding:10px; color:#666;">Searching...</li>';
            try {
                const res = await fetch(`/api/media/search-categories?q=${encodeURIComponent(query)}`);
                const categories = await res.json();
                treeRoot.innerHTML = '';
                if (categories.length === 0) {
                    treeRoot.innerHTML = '<li class="empty-state">No matches found.</li>';
                    return;
                }
                categories.forEach(catName => {
                    // Root nodes are never "inherited", so ancestorSelected is false
                    const node = createTreeNode(catName, false);
                    treeRoot.appendChild(node);
                });
            } catch (err) {
                console.error(err);
                treeRoot.innerHTML = '<li style="color:red; padding:10px;">Error searching.</li>';
            }
        }

        // 2. Create Tree Node Helper
        // ancestorSelected: Boolean indicating if a parent node is already checked
        function createTreeNode(catName, ancestorSelected) {
            const li = document.createElement('li');
            li.className = 'tree-item';
            
            const row = document.createElement('div');
            row.className = 'tree-row';
            
            const toggle = document.createElement('span');
            toggle.className = 'tree-toggle';
            toggle.textContent = '▶'; 
            
            const checkbox = document.createElement('input');
            checkbox.type = 'checkbox';
            checkbox.className = 'tree-checkbox';
            checkbox.value = catName;
            
            // LOGIC: Inherited Selection vs Explicit Selection
            if (ancestorSelected) {
                // If parent is checked, I must be checked and disabled (implicit selection)
                checkbox.checked = true;
                checkbox.disabled = true;
            } else if (selectedCategories.has(catName)) {
                // If I was explicitly selected previously
                checkbox.checked = true;
            }

            // LISTENER: Handle clicks
            checkbox.addEventListener('change', () => {
                if (checkbox.checked) {
                    addSelection(catName, li);
                } else {
                    removeSelection(catName, li);
                }
            });
            
            const label = document.createElement('span');
            label.className = 'tree-label';
            label.textContent = catName;
            label.addEventListener('click', () => {
                if (!checkbox.disabled) {
                    checkbox.checked = !checkbox.checked;
                    checkbox.dispatchEvent(new Event('change'));
                }
            });

            row.appendChild(toggle);
            row.appendChild(checkbox);
            row.appendChild(label);
            li.appendChild(row);

            const childContainer = document.createElement('ul');
            childContainer.className = 'tree-children';
            li.appendChild(childContainer);

            // Lazy Load Logic
            let loaded = false;
            toggle.addEventListener('click', async () => {
                if (childContainer.classList.contains('visible')) {
                    childContainer.classList.remove('visible');
                    toggle.classList.remove('expanded');
                } else {
                    toggle.classList.add('expanded');
                    childContainer.classList.add('visible');
                    
                    if (!loaded) {
                        childContainer.innerHTML = '<li style="padding:5px 0 0 25px; color:#999;">Loading...</li>';
                        try {
                            const res = await fetch(`/api/media/subcategories?parent=${encodeURIComponent(catName)}`);
                            const children = await res.json();
                            childContainer.innerHTML = ''; 
                            
                            if (children.length === 0) {
                                childContainer.innerHTML = '<li style="padding:5px 0 0 25px; color:#ccc; font-style:italic;">No subcategories</li>';
                                toggle.classList.add('empty');
                            } else {
                                // Determine state for children:
                                // They are selected if *I* am checked (whether I am disabled or not)
                                const isThisNodeChecked = checkbox.checked;
                                
                                children.forEach(childName => {
                                    childContainer.appendChild(createTreeNode(childName, isThisNodeChecked));
                                });
                            }
                            loaded = true;
                        } catch (err) {
                            childContainer.innerHTML = '<li style="color:red">Error loading.</li>';
                        }
                    }
                }
            });

            return li;
        }

        // 3. State Management Functions
        
        function addSelection(name, liNode) {
            selectedCategories.add(name);
            renderSelectedTags();
            updateSummary();
            
            // CASCADING LOGIC:
            // When I am selected, find all my currently visible children.
            // If they are explicitly selected, remove them (since I cover them now).
            // Then Disable them and Check them.
            if (liNode) {
                const childCheckboxes = liNode.querySelectorAll('.tree-children .tree-checkbox');
                childCheckboxes.forEach(childCb => {
                    const childName = childCb.value;
                    
                    // If child was explicitly selected, remove it from the list
                    // because the parent now covers it.
                    if (selectedCategories.has(childName)) {
                        selectedCategories.delete(childName);
                    }
                    
                    // Visually lock the child
                    childCb.checked = true;
                    childCb.disabled = true;
                });
                renderSelectedTags(); // Re-render in case we removed children
                updateSummary();
            }
        }

        function removeSelection(name, liNode) {
            selectedCategories.delete(name);
            renderSelectedTags();
            updateSummary();
            
            // CASCADING LOGIC:
            // When I am deselected, unlock all children.
            if (liNode) {
                const childCheckboxes = liNode.querySelectorAll('.tree-children .tree-checkbox');
                childCheckboxes.forEach(childCb => {
                    // Reset to default state
                    childCb.checked = false;
                    childCb.disabled = false;
                    
                    // Note: We do NOT re-add them to selectedCategories. 
                    // Unchecking a parent unchecks the whole branch.
                });
            }
        }

        function renderSelectedTags() {
            selectedArea.innerHTML = '';
            if (selectedCategories.size > 0) {
                selectedArea.classList.add('has-items');
                selectedCategories.forEach(name => {
                    const tag = document.createElement('span');
                    tag.className = 'selected-tag';
                    tag.innerHTML = `${name} <span class="remove-tag" title="Remove">×</span>`;
                    
                    tag.querySelector('.remove-tag').addEventListener('click', () => {
                        // Find the checkbox in the DOM if it exists and uncheck it
                        // This triggers the 'change' event which handles the logic
                        const cb = document.querySelector(`.tree-checkbox[value="${name}"]`);
                        if (cb && !cb.disabled) {
                            cb.checked = false;
                            cb.dispatchEvent(new Event('change'));
                        } else {
                            // If DOM element not found (e.g. searching elsewhere), just remove from state
                            selectedCategories.delete(name);
                            renderSelectedTags();
                            updateSummary();
                        }
                    });
                    
                    selectedArea.appendChild(tag);
                });
            } else {
                selectedArea.classList.remove('has-items');
            }
        }

        function updateSummary() {
            summarySpan.textContent = `${selectedCategories.size} root categories selected`;
        }

        // 4. Generate Manifest
        generateBtn.addEventListener('click', async () => {
            const errorMsg = document.getElementById('error-msg');
            const resultBox = document.getElementById('manifest-result');

            errorMsg.style.display = 'none';
            resultBox.style.display = 'none';

            if (selectedCategories.size === 0) {
                errorMsg.textContent = "Please select at least one category.";
                errorMsg.style.display = 'block';
                return;
            }

            const selectedArray = Array.from(selectedCategories);
            generateBtn.disabled = true;
            generateBtn.textContent = "Generating...";

            try {
                const response = await fetch('/api/media/generate-manifest', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ categories: selectedArray })
                });

                const data = await response.json();

                if (response.ok) {
                    if (data.count === 0) {
                        errorMsg.textContent = "No images found in the selected categories.";
                        errorMsg.style.display = 'block';
                    } else {
                        document.getElementById('file-count').textContent = data.count;
                        const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
                        const url = URL.createObjectURL(blob);
                        const link = document.getElementById('download-link');
                        link.href = url;
                        link.download = `media_manifest.json`;
                        resultBox.style.display = 'block';
                    }
                } else {
                    errorMsg.textContent = data.error || "Server error.";
                    errorMsg.style.display = 'block';
                }
            } catch (err) {
                console.error(err);
                errorMsg.textContent = "Network error.";
                errorMsg.style.display = 'block';
            } finally {
                generateBtn.disabled = false;
                generateBtn.textContent = "Generate Manifest";
            }
        });
    </script>
